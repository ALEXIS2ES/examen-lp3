<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.lenovo.crud.MainActivity">


    <TextView
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteY="-7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.015" />

    <EditText
        android:layout_width="354dp"
        android:layout_height="53dp"
        android:id="@+id/et_nombre"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ApellidoP"
        android:textSize="30sp"
        android:id="@+id/textView2"
        android:layout_below="@+id/et_nombre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="113dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:layout_width="347dp"
        android:layout_height="50dp"
        android:id="@+id/et_apellidoP"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:layout_editor_absoluteY="165dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.513" />
    <TextView
        android:layout_width="137dp"
        android:layout_height="44dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView3"
        android:text="ApellidoM"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.012"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_below="@+id/et_apellidoP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="344dp"
        android:layout_height="49dp"
        android:id="@+id/et_apellidoM"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.632"
        tools:layout_editor_absoluteX="3dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="310dp"
        android:layout_height="56dp"
        android:text="Guardar"
        android:id="@+id/bt_Guardar"
        tools:layout_editor_absoluteY="349dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_below="@+id/et_apellidoM"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="308dp"
        android:layout_height="50dp"
        android:text="mostrar"
        android:id="@+id/bt_mostrar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintVertical_bias="0.954"
        tools:layout_editor_absoluteY="440dp"
        tools:layout_editor_absoluteX="-77dp"
        android:layout_below="@+id/bt_Guardar"
        android:layout_alignRight="@+id/bt_Guardar"
        android:layout_alignEnd="@+id/bt_Guardar" />



</RelativeLayout>
